{varType Nette\Mail\Message $message}
{varType \Closure $getPlainText}

{if $message->getHtmlBody() !== ''}
	{$message->getHtmlBody()|noescape}
{else}
	<!doctype html>
	<meta charset="utf-8">
	<style>
		html, body {
			margin: 0;
			padding: 0;
			border: none;
			font-family: sans-serif;
			font-size: 12px;
			white-space: pre;
		}

		body {
			padding: 10px;
		}
	</style>
	<body>{$getPlainText($message)}</body>
{/if}
